<div class="container">
  <section id="user-password-reset-form" class="row mt-5">
    <div class="col-12 col-md-8 offset-md-2 col-xl-6 offset-xl-3 mt-5">
      <form action="{{element['#action']}}" method="post" class="bg-light p-3">
        <div class="row p-3">
          <div class="col-12 col-sm-4 pb-3 pb-sm-0 text-center">
            <a target="_blank" href="https://brand.rehab">
              <img class="w-100" src="{{ manifest('images/logo.svg') }}">
            </a>
          </div>
          <div class="col-12 col-sm-8">
            <div class="form-group">
              <label>New Password</label>
              <input type="password" class="form-control" id="edit-pass-pass1" name="pass[pass1]" required="required">
            </div>
            <div class="form-group">
              <label>Password Confirmation</label>
              <input type="password" class="form-control" id="edit-pass-pass2" name="pass[pass2]" required="required">
            </div>
            {{ element.form_build_id }}
            {{ element.form_id }}
            <button type="submit" id="edit-submit" name="op" class="btn btn-rehab">Log in</button>
          </div>
        </div>
      </form>
    </div>
  </section>
</div>
