<section id="footer" class="pt-2 pb-3 mt-5">
  <div class="container">
    <div class="row">
      <div class="col-12 px-0">
        <ul class="nav flex-column flex-md-row text-center text-md-left">
          {% for item in menu %}
            <li class="nav-item{% if item.active %} active{% endif %}">
              <a class="nav-link text-white" href="{{ item.url }}"><small>{{ item.title }}{% if item.active %} <span class="sr-only">(active trail)</span>{% endif %}</small></a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

<section id="footer-bar" class="py-3">
  <div class="container">
    <div class="row">
      <div class="col-12 text-white text-center text-md-left">
        <small>&copy; 2020 Company Name</small>
      </div>
    </div>
  </div>
</section>

{% if reload %}
  <script>
    (function () {
      const source = new EventSource('/dev/hot-reload');
      source.addEventListener('reload', function(event) {
          source.close();
          window.location.reload();
      }, false);
    })();
  </script>
{% endif %}
